<section>
    <div class="row mt-4">
        <div class="col-md-6">
            <h2>Add a new recipe</h2>

  <div class="field">
  <label class="label">Add Recipe Name</label>
  <div class="control">
    <input class="input" type="text" placeholder="Text input">
  </div>
</div>


<div class="field">
  <label class="label">Categories</label>
  <div class="control">
    <div class="select">
      <select>
        <option>Select a Cateogry</option>
        <option>Meat</option>
        <option>Fruit</option>
        <option>Vegetables</option>
        <option>Dessert</option>
      </select>
    </div>
  </div>
</div>

<div class="field">
  <label class="label">Enter a URL </label>
  <div class="control">
   <input id='url' type="url" class='input' placeholder="https://example.com" pattern="https://." size='30'>
</div>


<div class="field is-grouped">
