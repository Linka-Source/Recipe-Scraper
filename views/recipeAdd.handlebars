<form class="recipeAdd-form">
 <h2>Create New Recipe</h2>
<div class="field">
  <label class="label">Categories</label>
  <div class="control">
    <div class="select">
      <select name="category">
        <option>Select a Category</option>
        <option>Meat</option>
        <option>Fruit</option>
        <option>Vegetables</option>
        <option>Dessert</option>
      </select>
    </div>
  </div>
</div>

<div class="field">
  <label class="label">Enter a URL </label>
  <div class="control">
   <input id='recipeURL' name='recipeURL' type="url" class='input' placeholder="https://example.com" size='30'>
</div>


<div class="field is-grouped">
  <div class="control">
    <button class="button is-link">Submit</button>
  </div>
  <div class="control">
    <button class="button is-link is-light">Cancel</button>
  </div>
</div>



<script src="/js/recipeAdd.js"></script>