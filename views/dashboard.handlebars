<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
  <link href="/css/login.css" rel="stylesheet">
  <link href="/css/styledash.css" rel="stylesheet">

</head>
<div class="container">
  <div class="flex justify-center">
    <div class="w-full md:w-1/2">
      <ul>
        <li class="title mt-6 trans txtcl">Name: {{user.name}}</li>
      </ul>
    <div class="flex justify-center">
        <div class="w-full">
            <h2 class="title mt-6 trans txtcl">Your Account: <a class="member-name"></a>{{user.name}}</h2>
        </div>
    </div>
  </div>
</div>

<div>
  <div class="container">
  <div class="flex justify-center">
    <div class="w-full md:w-1/2">
    <button class="btn" type="submit"><a href="/recipe-add" class="create-txt">Create New Recipe</a></button>
    </div>
  </div>
  </div>
</div>

<section class="container">
  <h2 class="title mt-6 trans">Your Recipes</h2>
  
  <div class="columns is-multiline mt-2">
    {{#each recipes as |recipe|}}

    <a class="card column is-5 mr-6" href="/recipe/{{recipe.id}}">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="{{recipe.image}}" alt="{{recipe.name}}">
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
        </div>

        <div class="content">
          <h2>{{recipe.name}}</h2>
          <p>{{recipe.description}}</p>
          <br>
          <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
        </div>
      </div>
    </a>


    {{/each}}
  </div>
</section>